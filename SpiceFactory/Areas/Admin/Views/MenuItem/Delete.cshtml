@model MenuItemCreateEditViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h1 class="display-4">@Model.MenuItem.Name</h1>
</div>
<form asp-action="Delete">
    <div class="row">
        <h4>Are you sure you want to delete this?</h4>
        <partial name="_DeleteButtonPartial" model="@Model.MenuItem.Id" />
    </div>
</form>
<hr />
<div class="row justify-content-center">
    <div class="col-md-7">
        <fieldset disabled>
            <div class="form-group">
                <label asp-for="MenuItem.Name" class="control-label"></label>
                <input asp-for="MenuItem.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Description" class="control-label"></label>
                <textarea asp-for="MenuItem.Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Category.Name" class="control-label"></label>
                <input asp-for="MenuItem.Category.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.SubCategory.Name" class="control-label"></label>
                <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.Price" class="control-label"></label>
                <input asp-for="MenuItem.Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MenuItem.SpiceLevel" class="control-label"></label>
                <input asp-for="MenuItem.SpiceLevel" class="form-control" />
            </div>
        </fieldset>
        <partial name="_GoToIndexButtonPartial" />
    </div>
    <div class="col-md-3 offset-1">
        <img src="~/@Model.MenuItem.Image" class="img-thumbnail" />
    </div>
</div>