@model Category;
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 text-dark">Create category</h1>
<hr />

<div>
    <form method="post" asp-action="Create">
        <div class="form-group row col-6">
            <div class="col-4 text-right">
                <label class="col-form-label" asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger offset-4 col-8"></span>
        </div>
        <div class="form-group row col-6">
            <div class="col-4 offset-4">
                <input class="btn form-control btn-danger" type="submit" value="Done" />
            </div>
            <div class="col-4">
                <partial name="_GoToIndexButtonPartial" />
            </div>
        </div>
    </form>
</div>
