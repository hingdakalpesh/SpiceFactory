@model IEnumerable<MenuItem>

<div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurant">

    <div class="row">
        <h4 class="text-danger">@Model.FirstOrDefault().Category.Name</h4>
    </div>

    @foreach (var item in Model)
    {
        <div class="row border rounded m-3 p-3 border-danger">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <img src="~/@item.Image" class="img-thumbnail" />
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row">
                        <div class="col-8">
                            <label class="h5">@item.Name</label>
                            @if (item.SpiceLevel == MenuItem.ESpicy.Mild)
                            {
                                <img srcset="~/images/mild.png" />
                            }
                            @if (item.SpiceLevel == MenuItem.ESpicy.Hot)
                            {
                                <img srcset="~/images/spicy.png" />
                            }
                            @if (item.SpiceLevel == MenuItem.ESpicy.VeryHot)
                            {
                                <img srcset="~/images/verySpicy.png" />
                            }
                        </div>
                        <div class="col-4 text-right" style="color:maroon">
                            <label>£@item.Price</label>
                        </div>
                    </div>

                    <div class="row d-none d-md-block">
                        <div class="col ">
                            <p class="text-justify">@item.Description</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3 col-sm-12 offset-md-9">
                            <a asp-action="Details" class="btn btn-danger form-control" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <br />
</div>